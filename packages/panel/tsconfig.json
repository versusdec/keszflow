{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "rootDirs": ["src"],
    "moduleResolution": "node",
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": false,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "paths": {
      "@keszflow/components": ["../components/src"],
      "@keszflow/components/*": ["../components/src/*"],
    },
    "incremental": true
  },
  "include": ["next-env.d.ts", "src",
    "src/pages"
  ],
  "exclude": ["node_modules"]
}
